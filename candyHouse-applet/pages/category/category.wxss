.search{
  display: flex;
  width: 95%;
  height: 60rpx;
  margin: 0 auto;
  background-color: #EFEFEF;
  border-radius: 15rpx;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color:#777;
}
.body{
  display: flex;
  margin-top: 20rpx;
}
.category{
  width: 20%;
}
.category-item{
  width: 100%;
  height: 100rpx;
  background-color: #F5F5F5;
  text-align: center;
  line-height:100rpx;
  font-size: 30rpx;
  color: #555;
  position: relative;
}
.category-item.active{
  background-color: #fff;
  font-weight: 600;
  color: #000;
}
.category-item.active::after{
  content:"";
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  height: 40%;
  width: 10rpx;
  background-color: #FF69B4;
}
.product{
  background-color: #fff;
  width: 80%;
  box-sizing: border-box;
}
.product-item{
  height: 220rpx;
  padding: 10rpx 0;
  display: flex;
  background-color: #fff;
  border-bottom: 2rpx solid #F5F5F5;
}
.product-image{
  width: 200rpx;
  height: 200rpx;
  flex: none;
  margin-left:10rpx; 
}
.product-content{
  width: 350rpx;
  margin: 10rpx 20rpx;
  position: relative;
}
.product-name{
  width: 100%;
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.product-desc{
  width: 100%;
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 10rpx 0;
}
.product-lable{
  border: 1rpx solid rgba(255, 0, 0, 0.3);
  font-size: 22rpx;
  color: #FF6347;
  padding: 7rpx;
  line-height: 1.2;
}
.product-add{
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
}
.product-price{
  font-size: 28rpx;
  color: #F82F94;
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
}
.price{
  font-size: 30rpx;
  margin: 0 15rpx 0 5rpx;
}
.price-origin{
  font-size: 24rpx;
  color: #A9A9A9;
  text-decoration: line-through;
}