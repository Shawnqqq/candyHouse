.header-section{
  padding: 0 30rpx;
}
.body-section{
  background-color: #F5F5F5;
}
.search{
  display: flex;
  width: 100%;
  height: 75rpx;
  background-color: #EFEFEF;
  border-radius: 50rpx;
  align-items: center;
  font-size: 28rpx;
  color:#555;
}
.swiper-container{
  margin: 25rpx 30rpx;
  box-shadow: 0rpx 4rpx 12rpx rgba(220, 220, 220, 0.4);
}
.swiper-item{
  width: 100%;
  height: 300rpx;
}
.swiper-image{
  display: block;
  width: 100%;
  height: 100%;
}
.lable{
  margin: 0 30rpx;
  padding: 15rpx 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.lable-item{
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #FF69B4;
}
.category{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #fff;
  padding-bottom: 20rpx;
  margin: 0 30rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.category-item{
  display: flex;
  margin-top: 15rpx;
  width: 20%;
  flex-direction: column;
  align-items: center;
}
.category-image{
  display: block;
  width: 90rpx;
  height: 90rpx;
}
.category-text{
  margin-top: 15rpx;
  font-size: 24rpx;
}
.poster{
  margin: 0 30rpx;
}
.poster-image,.banner-image,.product-image{
  width: 100%;
  display: block;
}
.column{
  margin: 20rpx 30rpx;
}
.column-item{
  background-color: #fff;
  margin: 20rpx 0;
  border-radius: 30rpx;
}
.column-item-content{
  display: flex;
  height: 410rpx;
}
.product-item{
  flex: none;
  width: 30%;
  height: 400rpx;
  position: relative;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.product-name{
  margin: 10rpx 0;
  font-size: 26rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.product-lable{
  border: 1rpx solid rgba(255, 0, 0, 0.3);
  font-size: 22rpx;
  color: #FF6347;
  padding: 7rpx;
  line-height: 1.2;
}
.product-price{
  font-size: 27rpx;
  color: #F82F94;
  position: absolute;
  bottom: 40rpx;
  left: 30rpx;
}
.price{
  font-size: 30rpx;
  margin-left: 5rpx;
}
.price-origin{
  position: absolute;
  bottom: 15rpx;
  left: 30rpx;
  font-size: 24rpx;
  color: #A9A9A9;
  text-decoration: line-through;
}
.product-add{
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
}
