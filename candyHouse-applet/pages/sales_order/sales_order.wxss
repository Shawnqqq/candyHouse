.container{
  position: relative;
}
.order-address{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #DCDCDC;
}
.location-logo{
  width: 40rpx;
  margin: 0 20rpx;
}
.address-userinfo{
  font-size: 26rpx;
}
.address-location{
  color: #666;
  width: 95%;
}
.order-sku{
  background-color: #F7F7F7;
  padding: 30rpx 0;
}
.sku-item{
  display: flex;
  height: 200rpx;
  align-items: center;
  background-color: #fff;
  padding: 10rpx;
  margin: 2rpx 0;
}
.item-image{
  width: 180rpx;
  margin: 0 40rpx 0 20rpx;
}
.order-content{
  height: 90%;
  width: 65%;
  box-sizing: border-box;
}
.order-title{
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.8;
}
.order-name{
  font-size: 24rpx;
  color: #777;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-price{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}
.price{
  color: #FF69B4;
}
.order-info{
  padding: 30rpx;
  border-bottom: 1rpx solid #DCDCDC;
}
.info-item{
  display: flex;
  margin: 10rpx 0;
}
.info-title{
  color: #777;
}
.info-price{
  font-size: 25rpx;
}
.cancel{
  text-align: center;
  margin-bottom: 90rpx;
}
.cancel-btn{
  margin: 20rpx auto;
  width: 90%;
  height: 70rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #2F4F4F;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
}
.submit{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: rgba(47, 79, 79, 0.9);
  text-align: center;
  line-height: 80rpx;
}