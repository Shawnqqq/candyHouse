.banner{
  display: flex;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  position: relative;
  box-sizing: border-box;
}
.body{
  margin-bottom: 170rpx;
}
.address{
  display: flex;
}
.address-text{
  font-size: 32rpx;
  color: #000;
  line-height: 100rpx;
}
.delete{
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 30rpx;
  color: #777;
}
.body{
  padding: 20rpx;
  background-color: #F3F5F6;
}
.order{
  border-radius: 15rpx !important;
}
.order-item{
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff !important;
  border-bottom: 1rpx solid #F5F5F5;
}
.order-checkbox{
  margin: 0 10rpx;
}
.order-card{
  padding: 5rpx !important;
  background-color: #fff !important;
}
.order-price{
  font-size: 28rpx;
  font-weight: 500 !important;
  color: #F82F94 !important;
}
.order-origin-price{
  font-size: 22rpx !important;
}
.order-title{
  width: 400rpx;
  font-size: 30rpx;
  font-weight: 500 !important;
  line-height: 2 !important;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-desc{
  font-size: 26rpx;
  line-height: 2 !important;
  margin-bottom: 20rpx;
  width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-item-footer{
  display: flex;
  justify-content: flex-end;
}
.reduce,.add{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  border: 1px solid #D3D3D3;
  font-size: 45rpx;
  color: #555;
  text-align: center;
  line-height: 45rpx;
}
.num{
  font-size: 34rpx;
  line-height: 50rpx;
  margin: 0 20rpx;
}
.footer-price{
  color: #FF69B4 !important;
}
.footer-submit{
  background-color: #FF69B4 !important;
}
.van-submit-bar__bar{
  padding-left: 30rpx !important;
}
.tip-btn{
  color: #1E90FF !important;
}
.empty{
  padding: 20rpx;
}
.empty-image{
  width: 80%;
  display: block;
  margin: 0 auto 50rpx auto;
}
.empty-text{
  text-align: center;
  line-height: 2
}
.empty-desc{
  font-size: 30rpx;
  color: #DB7093;
}
.empty-title{
  font-size: 33rpx;
  color: #D86770;
  margin-left: 20rpx;
}
.freight{
  font-size: 25rpx;
  color: #FF69B4;
}