.container{
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 30rpx 0 120rpx 0;
  position: relative;
}
.address-section{
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  width: 92%;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 25rpx 5rpx;
  position: relative;
}
.address-content{
  display: flex;
  flex-wrap: wrap;
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  line-height: 1.4;
  height: auto;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.address{
  color: #000;
}
.address-desc,.address-phone{
  margin: 0 20rpx;
  font-weight: 500;
}
.address-tips{
  margin: 20rpx 20rpx;
  font-weight: 500;
  color: #000;
  font-size: 30rpx;
}
.address-footer{
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
}
.address-more{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 34rpx;
  color: rgba(136, 136, 136, 0.7);
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
.order{
  width: 92%;
  margin: 30rpx auto;
  padding-bottom: 100rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.order-item{
  width:90%;
  margin: 20rpx auto;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #DCDCDC;
  display: flex;
  align-items: center;
}
.order-image{
  margin: 0 20rpx;
  width: 20%;
}
.order-content{
  flex: 1;
}
.order-name{
  margin: 10rpx 0;
  width: 80%;
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}
.order-sku{
  color: #777;
  font-size: 26rpx;
}
.order-freight{
  font-size: 26rpx;
  color: #FF69B4;
}
.order-count{
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #000;
}
.price{
  font-size: 32rpx;
  font-weight: 600;
}
.num{
  margin-top: 20rpx;
  text-align: right;
  color: #999;
}
.order-detail{
  margin: 15rpx 40rpx;
  display: flex;
  justify-content: space-between;
}
.order-detail-title{
  font-size: 30rpx;
  color: #333;
}
.order-detail-price{
  font-size: 32rpx;
  color: #000;
}
.order-detail-favourable{
  font-size: 32rpx;
  color: #FF69B4;
}
.total{
  position: absolute;
  bottom: 20rpx;
  right: 40rpx;
  font-size: 34rpx;
  color: #FF1493;
}
.submit{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  box-shadow: 0rpx -2rpx 10rpx #DCDCDC;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.submit-total{
  margin-left: 30rpx;
  font-size: 28rpx;
}
.submit-total-num{
  font-size: 36rpx;
  color: #FF1493;
}
.submit-btn{
  margin-right: 30rpx;
  width: 240rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: #fff;
  background-color: #ff4891;
  border-radius: 15rpx;
}
