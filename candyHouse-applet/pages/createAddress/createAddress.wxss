.container{
  height: 100vh;
  background-color: #f5f5f5;
  padding-top: 20rpx;
}
.option-container{
  background-color: #fff;
  padding: 20rpx;
}
.option{
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
}
.option-radio{
  display: flex;
  margin-left: 200rpx;
}
.option-radio-item{
  margin-right:80rpx;
}
.onMap{
  z-index: 5;
  width: 80%;
  height: 80rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.tag{
  margin: 0 20rpx;
  border-bottom: 1rpx solid #eee;
}
.title{
  margin: 0 110rpx 0 10rpx;
}
.tag-item{
  margin-right: 30rpx;
}
.default{
  margin: 0 20rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.default-desc{
  font-size: 22rpx;
  color: #777;
}
.default-btn{
  position: absolute !important;
  right: 20rpx;
  top: 30rpx;
}
.submit-btn{
  width: 90%;
  height: 90rpx;
  margin: 30rpx auto;
  font-size: 36rpx;
  color: #fff;
  background-color: #FF4891;
  text-align: center;
  line-height: 90rpx;
  border-radius: 15rpx;
}