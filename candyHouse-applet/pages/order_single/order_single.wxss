.order-status{
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 140rpx;
  background-image: linear-gradient(70deg,rgb(255, 103, 179),rgb(255, 22, 146));
  color: #fff;
  padding-left: 40rpx;
}
.status-title{
  font-size: 32rpx;
}
.order-address{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #DCDCDC;
}
.location-logo{
  width: 40rpx;
  margin: 0 20rpx;
}
.address-userinfo{
  font-size: 26rpx;
}
.address-location{
  color: #666;
  width: 95%;
}
.order-sku{
  background-color: #F7F7F7;
  padding: 30rpx 0;
}
.sku-item{
  display: flex;
  height: 200rpx;
  align-items: center;
  background-color: #fff;
  padding: 10rpx;
  margin: 2rpx 0;
}
.item-image{
  width: 180rpx;
  margin: 0 40rpx 0 20rpx;
}
.order-content{
  height: 90%;
  width: 65%;
  box-sizing: border-box;
}
.order-title{
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.8;
}
.order-name{
  font-size: 24rpx;
  color: #777;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-price{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}
.price{
  color: #FF69B4;
}
.order-info{
  padding: 30rpx;
  border-bottom: 1rpx solid #DCDCDC;
}
.info-item{
  display: flex;
  margin: 10rpx 0;
}
.info-title{
  color: #777;
}
.info-price{
  font-size: 25rpx;
}
.contact-sell{
  width: 95%;
  height: 80rpx;
  margin: 8rpx auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  border: 1rpx solid #DCDCDC;
}
.cancel{
  background-color: #FFC0CB;
}