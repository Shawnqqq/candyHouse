        <view class="product-price">
          <text class="price">¥228</text>
          <text class="price-origin">￥266</text>
        </view>
      </view>
      <view class="product-item">
        <image class="product-image" 
          mode="widthFix"
          src="https://m.360buyimg.com/babel/s384x384_jfs/t1/52539/21/11776/396750/5d89c8ccE2b61f073/18d5f9ed037d26d4.jpg!q70.dpg"></image> 
