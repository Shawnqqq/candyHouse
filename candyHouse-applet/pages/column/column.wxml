<view class="container">
  <view class="column-section" wx:if="{{!loading}}" style="background-color:{{backColor}}">
    <editor
      style="height:auto"
      id="column-editor"
      read-only
      bindready="onEditorReady">
    </editor>
    <view class="column-content" style="width:90%">
      <view class="product-item">
        <image class="product-image" 
          mode="widthFix"
          src="https://m.360buyimg.com/babel/s384x384_jfs/t1/16173/28/10796/144843/5c8a19b1Edaf602b2/c1d236361546546f.jpg!q70.dpg"></image> 
