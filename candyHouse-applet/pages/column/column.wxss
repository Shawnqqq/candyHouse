.column-content{
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  justify-content: space-between;
}
.product-item{
  width: 48%;
  margin: 10rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 20rpx #C0C0C0;
}
.product-image{
  width: 100%;
  display: block;
}
.product-name{
  margin: 10rpx 30rpx;
  height: 80rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.product-price{
  margin: 10rpx 30rpx;
  display: flex;
  justify-content: center;
}
.price{
  font-size: 30rpx;
  color: #F82F94;
}
.price-origin{
  font-size: 28rpx;
  color: #A9A9A9;
  text-decoration: line-through;
}
.column-footer{
  width: 100%;
  margin-top: 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}
.loading-section{
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.loading{
  display: block;
  width: 250rpx;
  margin: 0 auto;
}
.loading-text{
  font-size: 36rpx;
  margin-top: 30rpx;
}