.container{
  position: relative;
}
.return{
  position: absolute;
  top: 20rpx;
  z-index: 10;
  width: 80rpx;
  height: 80rpx;
  background-color: #69696970;
  display: flex;
  justify-content: center;
  align-items: center;
}
.banner{
  margin-top: 40rpx;
  position: relative;
}
.swiper{
  height: 480rpx;
}
.swiper-item{
  width: 100%;
  height: 480rpx;
}
.swiper-item-image{
  display: block;
  width: 100%;
  height: 100%;
}
.current{
  position: absolute;
  bottom: 20rpx;
  right: 15rpx;
  width: 90rpx;
  height: 50rpx;
  background-color: rgba(46, 45, 45, 0.5);
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx;
}
.main{
  padding: 30rpx;
  position: relative;
  border-bottom: 20rpx solid #F3F5F6;
}
.name{
  font-size: 34rpx;
  font-weight: 600;
  color: #000;
  line-height: 1.4;
}
.desc{
  margin: 15rpx 0;
  font-size: 28rpx;
  color: #777;
  line-height: 1.4;
}
.price{
  font-size: 32rpx;
  color: #FF4891;
}
.price-num{
  font-size: 42rpx;
  font-weight: 600;
}
.price-through{
  margin-left: 15rpx;
  text-decoration: line-through;
}
.sold{
  position: absolute;
  bottom: 30rpx;
  right: 35rpx;
  font-size: 24rpx;
  color: #555;
}
.detail{
  display: flex;
  width: 100%;
  height: 100rpx;
  border-bottom: 20rpx solid #F3F5F6;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.detail-title{
  font-size: 30rpx;
  color: #777;
}
.detail-text{
  font-size: 30rpx;
  color: #333;
  margin-left: 30rpx;
}
.detail-lable{
  border: 1rpx solid rgba(255, 0, 0, 0.3);
  font-size: 22rpx;
  color: #FF6347;
  padding: 7rpx;
  line-height: 1.2;
}
.product-content{
  margin-bottom: 120rpx;
}
.add-cart{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  box-shadow: 0rpx -2rpx 10rpx #DCDCDC;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.add-btn{
  height: 80rpx;
  width: 75%;
  background-color: #FF4891;
  border-radius: 15rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 34rpx;
  color: #fff;
}
.sheet-container{
  position: relative;
}
.sheet-add{
  height: 90rpx;
  width: 100%;
  background-color: #FF4891;
  font-size: 38rpx;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  letter-spacing: 2rpx;
}
.sheet-num{
  display: flex;
  padding: 40rpx;
  justify-content: space-between;
  align-items: center;
}
.sheet-option{
  padding:40rpx;
}
.sheet-title{
  font-size: 28rpx;
  color: #666;
  margin: 10rpx;
}
.sheet-num-handle{
  display: flex;
  align-items: center;
}
.sheet-option-list{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.sheet-opiton-item{
  font-size: 30rpx;
  color: #333;
  background-color: #F7F7F7;
  margin: 10rpx;
  padding: 15rpx;
  border-radius: 15rpx;
}
.sheet-opiton-item.active{
  background-color: #FF69B4;
  color: #fff;
}
.sheet-close{
  position: absolute;
  top: 0rpx;
  right: 20rpx;
}
.sheet-banner{
  display: flex;
  margin: 30rpx;
}
.sheet-image{
  width: 30%;
}
.sheet-select{
  margin-left: 30rpx;
}
.sheet-price{
  font-size: 38rpx;
  color: #FF1493;
  margin-bottom: 30rpx;
}
.sheet-selected{
  font-size: 30rpx;
  color: #333;
  line-height: 2;
}
.loading-section{
  padding-top: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.loading{
  display: block;
  width: 250rpx;
  margin: 0 auto;
}
.loading-text{
  font-size: 36rpx;
  margin-top: 30rpx;
}
