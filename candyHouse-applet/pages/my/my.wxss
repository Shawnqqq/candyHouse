.banner{
  height: 370rpx;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}
.banner::after{
  content: '';
  width: 200%;
  height: 385rpx;
  position: absolute;
  top: 0;
  left: -50%;
  z-index: -1;
  border-radius: 0 0 50% 50%;
  background-image: linear-gradient(160deg, #F8E7C2,#FCBD8A);
}
.avatar{
  width: 150rpx;
  margin: 0 50rpx;
}
.banner-content{
  font-size: 30rpx;
}
.nickName{
  font-size: 38rpx;
  font-weight: 600;
}
.welcomes{
  color: #555;
  margin: 10rpx 0;
}
.login{
  font-size: 36rpx;
}
.banner-footer{
  position: absolute;
  bottom: 0;
  left: 10%;
  width: 80%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-image: linear-gradient(150deg, #7E7A7A,#241D1D);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  color: #fff;
}
.lable-item{
  display: flex;
  align-items: center;
}
.handle{
  background-color: #F5F5F5;
  width: 94%;
  margin: 50rpx auto;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  border: 1rpx solid #D3D3D3;
}
.all{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #DCDCDC;
}
.all-title{
  font-size: 36rpx;
  color: #000;
}
.all-btn{
  font-size: 26rpx;
  color: #777;
}
.order{
  display: flex;
  margin-top: 40rpx;
  justify-content: space-between;
  padding: 0 30rpx;
}
.order-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.order-title{
  font-size: 28rpx;
}